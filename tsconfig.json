{
  "exclude": [ "node_modules", "Examples" ],
  "compilerOptions": {
    "allowJs": false,

    "target": "es2020",
    "module": "es2020",

    "moduleResolution": "node",

    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,

    "declaration": true,
    "declarationDir": ".compiled",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "outDir": ".compiled",

    "rootDir": ".",

    "types": [ "node", "jest" ],

    "baseUrl": ".",
    "paths": {
      "#commons": [ "DSLF.Commons/Main.ts" ],
      "#scanner": [ "DSLF.Scanner/Main.ts" ],
      "#parser": [ "DSLF.Parser/Main.ts" ]
    }
  },
}